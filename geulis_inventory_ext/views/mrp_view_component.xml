<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mrp_production_tree_view_inherit_component" model="ir.ui.view">
		<field name="name">mrp.production.tree.component</field>
        <field name="model">mrp.production</field>
       	<field name="groups_id" eval="[(4, ref('geulis_inventory_ext.components_group'))]"/>
   		<field name="inherit_id" ref="mrp.mrp_production_tree_view" />
   		<field name="mode">primary</field>
   		<field name="arch" type="xml">
   			<xpath expr="//tree" position="attributes">
   				<attribute name="create">1</attribute>
   				<attribute name="edit">1</attribute>
   				<attribute name="delete">1</attribute>
   			</xpath>
   		</field>
	</record>
	<record id="mrp_production_form_view_inherit_component" model="ir.ui.view">
		<field name="name">mrp.production.form.component</field>
        <field name="model">mrp.production</field>
       	<field name="groups_id" eval="[(4, ref('geulis_inventory_ext.components_group'))]"/>
       	<field name="mode">primary</field>
   		<field name="inherit_id" ref="mrp.mrp_production_form_view" />
   		<field name="arch" type="xml">
   			<xpath expr="//form" position="attributes">
   				<attribute name="create">1</attribute>
   				<attribute name="edit">1</attribute>
   				<attribute name="delete">1</attribute>
   			</xpath>
   		</field>
	</record>
</odoo>