<?xml version="1.0" encoding="utf-8"?>
	<odoo>
		<record id="view_move_form_inherit" model="ir.ui.view">
			<field name="name">view.move.form.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/notebook/page[@name='other_info']/group/group[@name='sale_info_group']/field[@name='partner_bank_id']" position="after">
					<field name="fal_geulis_discount"/>
					<field name="fal_geulis_discount_khusus"/>
					<field name="fal_geulis_adm_tokotalk"/>
					<field name="fal_geulis_adm_shopee"/>
					<field name="fal_geulis_biaya_pengiriman"/>
					<field name="fal_geulis_poin"/>
				</xpath>
				<xpath expr="//form/header" position="after">
					<header>
						<field name="fal_transfer_state" widget="statusbar" statusbar_visible="draft,confirmed" attrs="{'invisible': [('invoice_picking_id','=',False)]}"/>
					</header>
				</xpath>
				<xpath expr="//form/sheet/group/group[2]/field[@name='payment_reference']" position="replace">
				</xpath>
				<xpath expr="//form/sheet/group/group[1]/field[@name='partner_id']" position="after">
					<field name="payment_reference"/>
					<field name="fal_auto_confirm_transfer"/>
				</xpath>
			</field>
		</record>
		<record id="view_move_tree_inherit" model="ir.ui.view">
			<field name="name">view.move.tree.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_invoice_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//tree/field[@name='state']" position="before">
					<!-- <field name="payment_reference" optional="show"/> -->
					<field name="fal_transfer_state" widget="badge" decoration-success="fal_transfer_state == 'confirmed'" decoration-info="fal_transfer_state == 'draft'" decoration-danger="fal_transfer_state == 'cancel'" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')"/>
				</xpath>
			</field>
		</record>
	</odoo>